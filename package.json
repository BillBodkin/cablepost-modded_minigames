{
  "name": "cablepost-modded-minigames",
  "version": "0.0.7",
  "description": "Mini Madness Launcher - Modded Minecraft Minigames",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "buildLinux": "electron-builder --linux",
    "buildWin": "electron-builder --win",
    "buildMac": "electron-builder --mac",
    "buildAll": "electron-builder --linux;electron-builder --win;electron-builder --mac"
  },
  "build": {
    "appId": "uk.co.cablepost.minimadness",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb",
        "rpm"
      ],
      "icon": "build/icon.png",
      "category": "Game"
    }
  },
  "keywords": [
    "Minecraft",
    "Launcher",
    "Mini",
    "Madness",
    "Minigames",
    "Modded",
    "CablePost"
  ],
  "author": {
    "name": "BillBodkin",
    "email": "billyg270@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^13.1.4",
    "electron-builder": "^22.11.7"
  },
  "dependencies": {
    "adm-zip": "^0.5.5",
    "async-get-file": "^1.0.4",
    "electron-log": "^4.3.5",
    "fetch": "^1.1.0",
    "fs-exists-sync": "^0.1.0",
    "inly": "^4.0.8",
    "js-file-downloader": "^1.1.20",
    "minecraft-launcher-core": "^3.16.4",
    "msmc": "^2.1.3",
    "node-fetch": "^2.6.1",
    "nodejs-file-downloader": "^4.7.1"
  }
}
